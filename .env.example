# Variables de entorno para Complaints Book Server (API)
# Copia este archivo a .env y completa los valores según tu entorno.

# --- Servidor ---
PORT=3000                   # Puerto para la API
NODE_ENV=production         # production | development
FORCE_HTTPS=true            # Forzar https en URLs de branding en producción
ALLOWED_ORIGINS=https://tu-app.com,https://otro-origen  # Orígenes permitidos para CORS
LOG_LEVEL=info              # trace|debug|info|warn|error
LOG_PRETTY=true             # Pretty print en desarrollo
LOG_TO_FILE=false           # true para escribir logs en logs/app.log
FORCE_DB_SYNC=false         # true para sincronizar la base de datos en cada inicio (desarrollo)

# --- Base de datos (MySQL) ---
DB_HOST=localhost
DB_NAME=reclamofacil_db
DB_USER=rf_user
DB_PASSWORD=rf_password

# --- Redis ---
REDIS_URL=redis://localhost:6379    # Conexión básica sin autenticación
REDIS_URL=redis://:mypassword@redis.remotehost.com:6379  # Con autenticación

# --- Email (SMTP) ---
EMAIL_HOST=smtp.tu-dominio.com
EMAIL_PORT=465
EMAIL_SECURE=true           # true para SSL (465), false para STARTTLS (587)
EMAIL_USER=notificaciones@tu-dominio.com
EMAIL_PASSWORD=tu_password_smtp

# --- Semillas (usuarios iniciales) ---
CREATE_SUPERADMIN_ON_SEED=true  # true para crear superadmin al ejecutar seed.js
SUPERADMIN_EMAIL=superadmin@ejemplo.com
SUPERADMIN_PASSWORD=cambia_esto
ADMIN_EMAIL=admin@tu-dominio.com
ADMIN_PASSWORD=cambia_esto

# --- Seguridad ---
JWT_SECRET=pon_un_secreto_fuerte_aqui

# --- Tenant por defecto (branding fallback) ---
# Valores usados si el tenant 'default' no existe aún. Pueden apuntar a assets locales.
DEFAULT_TENANT_COMPANY_BRAND=TuEmpresa
DEFAULT_TENANT_COMPANY_NAME=TuEmpresa S.A.C.
DEFAULT_TENANT_COMPANY_RUC=20605432109
DEFAULT_TENANT_PRIMARY_COLOR=#2563EB
DEFAULT_TENANT_ACCENT_COLOR=#16A34A
DEFAULT_TENANT_LOGO_LIGHT_PATH=assets/default-tenant/logo-light.png
DEFAULT_TENANT_LOGO_DARK_PATH=assets/default-tenant/logo-dark.png
DEFAULT_TENANT_FAVICON_PATH=assets/default-tenant/favicon.png
DEFAULT_TENANT_NOTIFICATIONS_EMAIL=soporte@reclamofacil.com

# --- Plan por defecto al ejecutar seed.js ---
DEFAULT_TENANT_PLAN_ON_SEED=starter  # Plan asignado al tenant 'default' al ejecutar seed.js (free | starter | pro | enterprise)
